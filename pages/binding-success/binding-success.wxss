/* pages/binding-success/binding-success.wxss */
.container {
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
	/* padding: 200rpx 0; */
	padding: 0 !important;
	box-sizing: border-box;
    padding-bottom: 206rpx !important;
} 

.success-icon-wrap {
    width: 100%;
    height: 336rpx;
    box-sizing: border-box;
    padding: 100rpx 0 0 0;
    text-align: center;
}

.success-text-wrap {
    width: 100%;

}

.success-text-wrap text {
    display: block;
    text-align: center;
}

.success-text-wrap text:nth-of-type(1) {
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 40rpx;
    color: #000;
}

.success-text-wrap text:nth-of-type(2) {
    width: 100%;
    height: 110rpx;
    line-height: 110rpx;
    font-size: 28rpx;
    color: rgba(0, 0, 0, .4);
}

.success-btn-wrap {
    width: 670rpx;

}
.success-btn-wrap button:nth-of-type(1) {
    background: #6492FF;
    color: #fff;
}

.success-btn-wrap button {
    margin-bottom: 30rpx;
}