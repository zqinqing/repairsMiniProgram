/* pages/comment/comment.wxss */
.container {
	height: 100%;
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: space-between;
	/* padding: 200rpx 0; */
	padding: 0 !important;
	box-sizing: border-box;
} 


page {
    display: block;
    background: #fff;
}

.comments-wrap {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    margin: 0 auto;
    width: 100%;
    height: 800rpx;
    background: #fff;
    border-radius: 12rpx;
    box-sizing: border-box;
    padding: 262rpx 0 134rpx 0;
}

.comments-wrap::before, .comments-wrap::after {
    position: absolute;
    left: 0;
    right: 0;
    margin: 0 atuo;
    display: block;
    text-align: center;
    width: 100%;
    color:rgba(100,146,255,1);
    overflow: hidden;
}

.comments-wrap::before {
    top: 0;
    content: '维修已完成';
    height: 100rpx;
    line-height: 120rpx;
    font-size: 36rpx;
}

.comments-wrap::after {
    top: 100rpx;
    content: '请您对本次检修进行评价';
    height: 62rpx;
    line-height: 42rpx;
    font-size: 30rpx;
    border-bottom: 1px solid #d8d8d8;
}

.submit-btn {
    width: 360rpx;
    height: 60rpx;
    background:rgba(100,146,255,1);
    border-radius: 10rpx;
    font-size: 32rpx;
    color: rgba(255,255,255,1);
    line-height: 60rpx;
    text-align: center;
    position: absolute;
    bottom: 55rpx;
    left: 0;
    right: 0;
    margin: 0 auto;
}

.comments-list {
    width: 444rpx;
    height: 88rpx;
    margin: 0 auto;
    /* background: red; */
}
.remark {
    display: block;
    float: left;
    width: 154rpx;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 34rpx;
    text-align: left;
    color:rgba(0,0,0,1);
    /* background: greenyellow; */
}

.star-wrap {
    float: left;
    width: 290rpx;
    height: 88rpx;
    /* background: yellow; */
}

.star-wrap text {
    display: block;
    width: 48rpx;
    height: 88rpx;
    float: left;
    margin: 0 5rpx;
    transition: all .2s ease;
    background: url('data:image/png;base64,') no-repeat center / 48rpx 46rpx;
}

.star-wrap text.active {
    background: url('data:image/png;base64,') no-repeat center / 48rpx 46rpx;
}